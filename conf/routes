# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Riceball List
GET     /riceball                   controllers.RiceballController.list
POST    /riceball                   controllers.RiceballController.add
POST    /riceball/:id/delete        controllers.RiceballController.delete(id: Long)

# Riceball Detail
GET     /riceball/:id               controllers.RiceballController.detail(id: Long)
